model Application {
  id                  String                @id @default(uuid())
  label               String
  shortName           String?
  logo                String?
  description         String
  purposes            String[]
  tags                String[]
  lifecycleId         String
  lifecycle           Lifecycle             @relation("LifecycleApplications", fields: [lifecycleId], references: [id])
  metadataId          String
  metadata            Metadata              @relation("ApplicationMetadata", fields: [metadataId], references: [id])
  actors              Actor[]               @relation("ApplicationActors")
  externals           External[]            @relation("ApplicationExternals")
  compliances         Compliance[]          @relation("ApplicationCompliances")
  anomalyNotification AnomalyNotification[] @relation("ApplicationAnomalyNotification")
  externalRessource   ExternalRessource[]   @relation("ApplicationExternalsRessource")
  ownerId             String
  owner               User                  @relation("UserApplications", fields: [ownerId], references: [keycloakId])
  
  relationsAsSource   Relation[]            @relation("SourceHasTarget")
  relationsAsTarget   Relation[]            @relation("TargetHasSource")

  @@index([label])
  @@index([shortName])
  @@map("applications")
}

model Relation {
  type_relation        RelationType
  applicationSource   String
  applicationTarget    String
  sourceApplication    Application           @relation("SourceHasTarget", fields: [applicationSource], references: [id])
  targetApplication    Application           @relation("TargetHasSource", fields: [applicationTarget], references: [id])

  @@id([applicationSource, applicationTarget, type_relation])
  @@map("relations")
}


enum RelationType {
  is_part_of
  in_replacement_of
  is_service_user_of
  is_data_user_of
}